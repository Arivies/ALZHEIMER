{% extends '::frontend.html.twig' %}

{% block body -%}
<div class="row">
    <div class="large-12 columns">
        <h1>Grupo list</h1>
        <table class="records_list">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Descripcion</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for entity in entities %}
                <tr>
                    <td><a href="{{ path('grupo_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                    <td>{{ entity.Descripcion }}</td>
                    <td>
                        <ul>
                            <li>
                                <a href="{{ path('grupo_show', { 'id': entity.id }) }}">show</a>
                            </li>
                            <li>
                                <a href="{{ path('grupo_edit', { 'id': entity.id }) }}">edit</a>
                            </li>
                        </ul>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
        <ul>
            <li>
                <a href="{{ path('grupo_new') }}">
                    Create a new entry
                </a>
            </li>
        </ul>
    </div>
</div>
{% endblock %}
