{% extends '::frontend.html.twig' %}

{% block body -%}
<div class="row">
    <div class="large-8 columns">

        <h1>Usuario</h1>

        <table class="record_properties">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ entity.id }}</td>
                </tr>
                <tr>
                    <th>Username</th>
                    <td>{{ entity.username }}</td>
                </tr>
                <tr>
                    <th>Nombre</th>
                    <td>{{ entity.nombre }}</td>
                </tr>
                <tr>
                    <th>Apellido Paterno</th>
                    <td>{{ entity.apaterno }}</td>
                </tr>
                <tr>
                    <th>Apellido Materno</th>
                    <td>{{ entity.amaterno }}</td>
                </tr>
                <tr>
                    <th>Correo</th>
                    <td>{{ entity.correo }}</td>
                </tr>
                <tr>
                    <th>Foto</th>
                    <td>
			{% if entity.rutaFoto%}
                        <img src="{{ asset('uploads/images/usuarios/') ~ entity.rutaFoto }}" />
			{% else %}
			<img src="{{ asset('uploads/images/usuarios/image-notfound.jpg') }}" />
                        {% endif %}
                    </td>
                </tr>
                <tr>
                    <th>Contacto</th>
                    <td>{{ entity.contacto }}</td>
                </tr>
                <tr>
                    <th>Nivel</th>
                    <td>{{ entity.nivelID }}</td>
                </tr>
                <tr>
                    <th>Grupo</th>
                    <td>{{ entity.grupoID }}</td>
                </tr>

            </tbody>
        </table>

        <ul class="record_actions">
            
                <a href="{{ path('usuario_index') }}">
                    Regresar
                </a><br>
            
            
                <a href="{{ path('usuario_edit', { 'id': entity.id }) }}">
                    Editar
                </a>
            
            {{ form(delete_form) }}
        </ul>

    </div>
</div>
{% endblock %}
