{% extends '::frontend.html.twig' %}

{% block body -%}
<div class="row">
    <div class="large-8 columns">

        <h1>Usuario</h1>

        <table class="record_properties">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ entity.id }}</td>
                </tr>
                <tr>
                    <th>Username</th>
                    <td>{{ entity.username }}</td>
                </tr>
                <tr>
                    <th>Nombre</th>
                    <td>{{ entity.nombre }}</td>
                </tr>
                <tr>
                    <th>A_paterno</th>
                    <td>{{ entity.apaterno }}</td>
                </tr>
                <tr>
                    <th>A_materno</th>
                    <td>{{ entity.amaterno }}</td>
                </tr>
                <tr>
                    <th>Correo</th>
                    <td>{{ entity.correo }}</td>
                </tr>
                <tr>
                    <th>Foto</th>
                    <td>{{ entity.foto }}</td>
                </tr>
                <tr>
                    <th>Contacto</th>
                    <td>{{ entity.contacto }}</td>
                </tr>
                <tr>
                    <th>Nivel</th>
                    <td>{{ entity.nivelID }}</td>
                </tr>
                <tr>
                    <th>Grupo</th>
                    <td>{{ entity.grupoID }}</td>
                </tr>

            </tbody>
        </table>

        <ul class="record_actions">
            <li>
                <a href="{{ path('usuario_index') }}">
                    Back to the list
                </a>
            </li>
            <li>
                <a href="{{ path('usuario_edit', { 'id': entity.id }) }}">
                    Edit
                </a>
            </li>
            <li>{{ form(delete_form) }}</li>
        </ul>

    </div>
</div>
{% endblock %}
