{% extends '::frontend.html.twig' %}

{% block body -%}
<div class="row">
    <div class="large-12 columns">
        <h1>Usuario list</h1>
        <table class="records_list">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Username</th>
                    <th>Nombre</th>
                    <th>A_paterno</th>
                    <th>A_materno</th>
                    <th>Correo</th>
                    <th>Foto</th>
                    <th>Contacto</th>
                    <th>Nivel</th> 
                    <th>Grupo</th>                    
                    
                </tr>
            </thead>
            <tbody>
                {% for entity in entities %}
                <tr>
                    <td><a href="{{ path('usuario_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                    <td>{{ entity.username }}</td>
                    <td>{{ entity.nombre }}</td>
                    <td>{{ entity.apaterno }}</td>
                    <td>{{ entity.amaterno }}</td>
                    <td>{{ entity.correo }}</td>
                    <td>{{ entity.foto }}</td>                    
                    <td>{{ entity.contacto }}</td>
                    <td>{{ entity.nivelID }}</td>
                    <td>{{ entity.grupoID }}</td>
                    
                    
                    
                    <td>
                        <ul>
                            <li>
                                <a href="{{ path('usuario_show', { 'id': entity.id }) }}">show</a>
                            </li>
                            <li>
                                <a href="{{ path('usuario_edit', { 'id': entity.id }) }}">edit</a>
                            </li>
                        </ul>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
        <ul>
            <li>
                <a href="{{ path('usuario_new') }}">
                    Create a new entry
                </a>
            </li>
        </ul>
    </div>
</div>
{% endblock %}
