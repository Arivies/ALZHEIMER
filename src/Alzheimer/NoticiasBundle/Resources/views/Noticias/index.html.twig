{% extends '::frontend.html.twig' %}

{% block body -%}
<div class="row">
    <div class="large-12 columns">
        <h1>Noticias Creadas</h1>

        <table class="records_list">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Titulo</th>
                    <th>Cuerpo</th>
                    <th>Fecha</th>
                    <th>1ra Imagen</th>
                    <th>2da Imagen</th>
                    <th>Actiones</th>
                </tr>
            </thead>
            <tbody>
                {% for entity in entities %}
                <tr>
                    <td><a href="{{ path('noticias_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                    <td>{{ entity.titulo }}</td>
                    <td>{{ entity.cuerpo }}</td>
                    <td>{% if entity.fecha %}{{ entity.fecha|date('d-m-Y') }}{% endif %}</td>
                    <td>{{ entity.imagenPrim }}</td>
                    <td>{{ entity.imagenSec }}</td>

                    <td>
                        <ul>
                            <!--<li>-->
                                <a href="{{ path('noticias_show', { 'id': entity.id }) }}">mostrar</a>
                            <!--</li>
                            <li>-->
                                <a href="{{ path('noticias_edit', { 'id': entity.id }) }}">editar</a>
                            <!--</li>-->
                        </ul>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>

        <ul>
            <!--<li>-->
                <a href="{{ path('noticias_new') }}">
                    Nueva Noticia
                <!--</a>-->
            </li><br>
            <a href="{{ path('admin') }}">Regresar a administraci&oacute;n</a>
        </ul>

    </div>
</div>
<br><br><br><br><br><br><br><br><br><br><br><br>
{% endblock %}
